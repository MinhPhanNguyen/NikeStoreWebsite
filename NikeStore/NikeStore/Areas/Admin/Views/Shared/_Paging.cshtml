@model NikeStore.Models.Paginate

@if (Model.TotalPages > 1)
{
	<ul class="pagination">
		@if (Model.CurrentPage > 1)
		{
			<li><a class="page-link" asp-action="Product" asp-route-pg="1">Đầu</a></li>
			<li><a class="page-link" asp-action="Product" asp-route-pg="@(Model.CurrentPage - 1)">Trước</a></li>
		}

		@for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
		{
			<li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
				<a class="page-link" asp-action="Product" asp-route-pg="@pge">@pge</a>
			</li>
		}

		@if (Model.CurrentPage < Model.TotalPages)
		{
			<li><a class="page-link" asp-action="Product" asp-route-pg="@(Model.CurrentPage + 1)">Sau</a></li>
			<li><a class="page-link" asp-action="Product" asp-route-pg="@Model.TotalPages">Cuối</a></li>
		}
	</ul>
}