@model LogInViewModel

@{
	ViewData["Title"] = "Đăng nhập";
	Layout = null;
}

<link rel="stylesheet" href="~/css/Client/style.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
<link rel="stylesheet" href="~/fontawesome-free-6.7.2-web/css/all.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/NikeStore.styles.css" asp-append-version="true" />
<script src="~/js/Client/script.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<div class="LogInPage">
	<div class="Container">
		<form asp-action="LogIn" asp-controller="Account">
			<div asp-validation-summary="ModelOnly" class="Notification text-danger error"></div>
			<div class="Contain_img">
				<img src="/images/icon/logo.png" alt="Alternate Text" />
			</div>

			<div class="Title">
				<h2>Vui lòng điền <strong>Email và Số điện thoại</strong>  của bạn để đăng nhập hoặc đăng ký</h2>
			</div>

			<div class="Language">
				<h2><strong>Ngôn ngữ:</strong> Tiếng Việt</h2>
				<a href="">Thay đổi</a>
			</div>

			<div class='form-group TypeInput'>
				<label>Tên tài khoản</label>
				<input asp-for="AccountName" type='text' class="form-control" />
				<span asp-validation-for="AccountName" class="text-danger"></span>
			</div>

			<div class='form-group TypeInput'>
				<label>Mật khẩu</label>
				<input asp-for="Password" type="password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="TermAndPrivacy">
				<button>1. Chính sách riêng tư</button>
				<button>2. Điều hạn sử dụng</button>
			</div>

			<button class="btn btn-default">Đăng nhập</button>
		</form>

		<a asp-action="SignIn" asp-controller="Account" class="btnRegister">Tạo tài khoản</a>
	</div>
</div>


@section Scripts {
	@{
		await Html.PartialAsync("_ValidationScriptsPartial");
		await RenderSectionAsync("Scripts", required: false);
	}
}