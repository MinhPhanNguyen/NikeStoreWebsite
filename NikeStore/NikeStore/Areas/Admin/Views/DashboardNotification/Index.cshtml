@{
}

<div class="Dashboard">
	<div class="DashboardContent">
		<div class="DashboardNotification" id="DashboardNotification">
			<div class="FilterOption">
				<div class="Search">
					<input type="text" placeholder="Tìm kiếm" />
					<i class="fa-solid fa-magnifying-glass"></i>
				</div>
				<div class="DateFilter">
					<label>Chọn thời gian:</label>
					<select id="filterType" onchange="toggleDateInput()">
						<option value="day">Ngày</option>
						<option value="month">Tháng</option>
						<option value="year">Năm</option>
					</select>
					<input type="date" id="dateInput" />
					<input type="month" id="monthInput" style="display:none;" />
					<input type="number" id="yearInput" placeholder="2020 - 2025" min="2020" max="2025" style="display:none;" />
				</div>
			</div>
			<ul>
				<li>
					<div class="Left">
						<div class="Contain_img">
							<img src="/images/icon/fbsquare.png" alt="Alternate Text" />
						</div>

						<div class="Content">
							<h3>MinhPhan</h3>
							<p>Chao ban nha !</p>
						</div>
					</div>

					<div class="Time">
						<p>2 ngày trước</p>
						<span>Chưa đọc</span>
					</div>
				</li>
			</ul>
			<a href="#" class="button">Xem thêm</a>
		</div>
	</div>
</div>