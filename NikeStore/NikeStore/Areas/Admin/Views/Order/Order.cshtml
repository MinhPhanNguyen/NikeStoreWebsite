@{
	ViewData["Title"] = "Danh sách đơn hàng";
}

<div class="Dashboard">
	<div class="DashboardContent">
		<div class="OrderManager Manager" id="OrderManager">
			<div class="ContentManager">
				<section class="Section_1">
					<div class="Container">
						<h2>Danh sách đơn hàng</h2>
					</div>
				</section>

				<section class="Section_3">
					<div class="Container">
						<table id="myTable">
							<thead>
								<tr>
									<th># </th>
									<th>Mã hóa đơn </th>
									<th>Tên khách hàng </th>
									<th>Trạng thái </th>
									<th>Ngày tạo</th>
									<th>Xem</th>
									<th>Xóa</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var order in Model)
								{
									<tr>
										<td>#</td>
										<td>@order.OrderCode</td>
										<td>@order.UserName</td>
										@if (order.Status == 0)
										{
											<td style="color: green; font-weight:bold;">Thành công</td>
										}
										else
										{
											<td style="color: red; font-weight:bold;">Chờ duyệt</td>
										}
										<td>@order.CreateDate</td>
										<td><a asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@order.OrderCode"><i class="fa-solid fa-edit"></i></a></td>
										<td><a asp-action="Delete" asp-controller="Order" asp-route-ordercode="@order.OrderCode"><i class="fa-solid fa-trash"></i></a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</section>
			</div>
		</div>
	</div>
</div>
