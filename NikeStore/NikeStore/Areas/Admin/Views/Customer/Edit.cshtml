@model Customer

@{
	ViewData["Title"] = "Sửa khách hàng";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="Dashboard">
	<div class="DashboardContent">
		<div class="AddTable Manager">
			<div class="Container">
				<div class="Title">
					<h3>Sửa tài khoản</h3>
				</div>

				<form asp-action="Add" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label for="CustomerName">Tên khách hàng:</label>
						<input asp-for="CustomerName" type="text" class="form-control" />
						<span asp-validation-for="CustomerName" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label for="Password">Mật khẩu:</label>
						<input asp-for="Password" type="text" class="form-control" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label for="Email">Email:</label>
						<input asp-for="Email" type="text" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label for="PhoneNumber">Số điện thoại:</label>
						<input asp-for="PhoneNumber" type="text" class="form-control" />
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label for="Address">Địa chỉ:</label>
						<input asp-for="Address" type="text" class="form-control" />
						<span asp-validation-for="Address" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label for="ImageUpload">Ảnh:</label>
						<input asp-for="ImageUpload" type="file" id="imageUploadInput" class="form-control" />
						<span asp-validation-for="ImageUpload" class="text-danger"></span>
					</div>

					<img id="imagePreview" src="~/media/customers/@Model?.ImgUrl" width="200" style="display: block; margin-top: 10px;" />

					<div class="btnAddTable form-group">
						<button>Thêm</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.PartialAsync("_ValidationScriptsPartial");
	}
}