@model IEnumerable<NikeStore.Models.Customer>

@{
	ViewData["Title"] = "Danh sách khách hàng";
}

<div class="Dashboard">
	<div class="DashboardContent">
		<div class="ProductManager Manager" id="ProductManager">
			<div class="ContentManager">
				<section class="Section_1">
					<div class="Container">
						<h2>Danh sách khách hàng</h2>
					</div>
				</section>

				<section class="Section_2">
					<div class="Container">
						<div class="LeftFilter">
							<div class="SearchProduct">
								<label for="NameProduct">
									<i class="fa-solid fa-magnifying-glass"></i>
								</label>
								<input id="NameProduct" type="text" placeholder="Tên khách hàng">
							</div>

							<a class="AddIcon" href="@Url.Action("Add", "Customer", new { area = "Admin" })">
								<i class="fa-solid fa-plus"></i>
								<span>Thêm</span>
							</a>
						</div>

						<div class="RightFilter">
							<div class="PageMove">
								<i class="LeftMove fa-solid fa-angle-left"></i>
								<input type="text" placeholder="Trang 1 / 50">
								<i class="RightMove fa-solid fa-angle-right"></i>
							</div>
						</div>
					</div>
				</section>

				<section class="Section_3">
					<div class="Container">
						<table>
							<thead>
								<tr>
									<th>STT</th>
									<th>Tên khách hàng</th>
									<th>Ảnh</th>
									<th>Mật khẩu</th>
									<th>Email</th>
									<th>Số điện thoại</th>
									<th>Địa chỉ</th>
									<th>Sửa</th>
									<th>Xóa</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var customer in Model)
								{
									<tr>
										<td>@customer.CustomerID</td>
										<td>@customer.CustomerName</td>
										<td><img src="~/media/customers/@customer.ImgUrl" alt="Alternate Text" /></td>
										<td>@customer.Password</td>
										<td>@customer.Email</td>
										<td>@customer.PhoneNumber</td>
										<td>@customer.Address</td>
										<td><a asp-action="Edit" asp-controller="Customer" asp-route-Id="@customer.CustomerID"><i class="fa-solid fa-edit"></i></a></td>
										<td><a asp-action="Delete" asp-controller="Customer" asp-route-Id="@customer.CustomerID"><i class="fa-solid fa-trash"></i></a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</section>
			</div>
		</div>
	</div>
</div>
