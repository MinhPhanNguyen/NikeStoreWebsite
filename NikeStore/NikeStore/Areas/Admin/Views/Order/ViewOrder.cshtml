@model IEnumerable<NikeStore.Models.OrderDetail>

@{
	ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="Dashboard">
	<div class="DashboardContent">
		<div class="OrderManager Manager" id="OrderManager">
			<div class="ContentManager">
				<section class="Section_1">
					<div class="Container">
						<h2>Chi tiết đơn hàng</h2>
					</div>
				</section>

				<section class="Section_2">
					<div class="Container">
						<div class="LeftFilter">
							<div class="SearchProduct">
								<label for="NameProduct">
									<i class="fa-solid fa-magnifying-glass"></i>
								</label>
								<input id="NameProduct" type="text" placeholder="Mã đơn">
							</div>
						</div>

						<div class="RightFilter">
							<div class="PageMove">
								<i class="LeftMove fa-solid fa-angle-left"></i>
								<input type="text" placeholder="Trang 1 / 50">
								<i class="RightMove fa-solid fa-angle-right"></i>
							</div>
						</div>
					</div>
				</section>

				<section class="Section_3">
					<div class="Container">
						<table>
							<thead>
								<tr>
									<th># </th>
									<th>Mã hóa đơn </th>
									<th>Tên khách hàng </th>
									<th>Tên sản phẩm</th>
									<th>Loại</th>
									<th>Kích thước</th>
									<th>Màu sắc</th>
									<th>Số lượng</th>
									<th>Thành tiền</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model) {
									<tr>
										<td>#</td>
										<td>@item.OrderCode</td>
										<td>@item.UserName</td>
										<td>@item.Product?.Name</td>
										<td>@item.Product?.ProductType?.Type</td>
										<td>@item.Product?.ProductSize?.Size</td>
										<td>@item.Product?.ProductColor?.Color</td>
										<td>@item.Quantity</td>
										<td>@item.Price</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</section>
			</div>
		</div>
	</div>
</div>
