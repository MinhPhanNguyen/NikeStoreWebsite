@{
	ViewData["Title"] = "Liên hệ";
}

<div class="ContactPage">
	<div class="Container">
		<section class="Section_1">
			<img src="/images/Banner/ContactBanner.png" alt="Alternate Text" />

			<div class="Content">
				<h2>Liên Hệ Chúng Tôi</h2>
			</div>
		</section>

		<section class="Section_2">
            <h2>XIN VUI LÒNG ĐIỀN THÔNG TIN BÊN DƯỚI.<br /> CHÚNG TÔI SẼ LIÊN HỆ VỚI BẠN TRONG THỜI GIAN SỚM NHẤT</h2>
            <form enctype="multipart/form-data">
                <div class=' form-group'>
                    <label for="Name">Họ và tên</label>
                    <input type='text' class="form-control" />
                </div>

                <div class=' form-group'>
                    <label>Số điện thoại</label>
                    <input type='tel' class="form-control" />
                </div>
                <div class='form-group'>
                    <label>Email</label>
                    <input type='email' class="form-control" />
                </div>

                <div class='  form-group'>
                    <label>Nội dung</label>
                    <textarea class="form-control" ></textarea>
                </div>
                <div class='Check'>
                    <input type='checkbox' class='checkbox' />
                    <p><span>Tôi xác nhận rằng các đại lý Nike Store có thể gửi cho tôi thêm thông tin về các sản phẩm hoặc dịch vụ. *</span></p>
                </div>

                <div class='Check'>
                    <input type='checkbox' class='checkbox' />
                    <p><span>Tôi đã đọc và đống ý với các quy định và chính xách của Nike Store. *</span></p>
                </div>  
            </form>
            <button>Đăng ký</button>
		</section>
	</div>
</div>